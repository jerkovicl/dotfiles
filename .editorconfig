# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = auto #lf
max_line_length = 120

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
ij_typescript_force_quote_style = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.cs]
indent_style = space
indent_size = 4
tab_size = 4

[*.ascx]
indent_style = space
indent_size = 4
tab_size = 4
