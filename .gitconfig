[winUpdater]
	recentlySeenVersion = 2.25.0.windows.1
[user]
	name = Luka Jerkovic
	email = luka.jerkovic@XXX.com
	signingkey = XXXXX
[color "status"]
  added = green bold
  changed = red bold strike
  untracked = cyan
  branch = yellow black bold ul
[diff]
	tool = p4merge
[difftool "p4merge"]
	path = "C:\\Users\\LukaJerković\\Tools\\cmder\\bin\\p4merge.exe"
	keepBackup = false
[merge]
	tool = p4merge
[mergetool "p4merge"]
	path = "C:\\Users\\LukaJerković\\Tools\\cmder\\bin\\p4merge.exe"
	keepBackup = false
	prompt = false
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	longpaths = true
	autocrlf = input
	fsmonitor = true
	editor = code --wait
[help]
	autocorrect = 1
[gui]
	recentrepo = C:/Git/frontend
[safe]
	directory = C:/Git/*
	directory = C:/Git/frontend
[alias]
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
[push]
	default = current
[pull]
	rebase = true
[gpg]
	program = "C:\\Program Files (x86)\\GnuPG\\bin\\gpg.exe"
[commit]
	gpgsign = true
[tag]
	gpgsign = true
